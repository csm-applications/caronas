<?xml version="1.0" encoding="UTF-8"?>
<persistence version="2.1" xmlns="http://xmlns.jcp.org/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/persistence http://xmlns.jcp.org/xml/ns/persistence/persistence_2_1.xsd">
  <persistence-unit name="CaronaPU" transaction-type="RESOURCE_LOCAL">
    <provider>org.eclipse.persistence.jpa.PersistenceProvider</provider>
    <class>model.UserAccount</class>
    <class>model.Carro</class>
    <class>model.Viagem</class>
    <class>model.Tarefa</class>
    <class>model.Task</class>
    <class>model.Travel</class>
    <class>model.Car</class>
    <class>model.Sector</class>
    <exclude-unlisted-classes>false</exclude-unlisted-classes>
    <properties>
      
      <property name="javax.persistence.jdbc.url" value="jdbc:postgresql://localhost:5432/carona"/>
      <property name="javax.persistence.jdbc.user" value="postgres"/>
      <property name="javax.persistence.jdbc.driver" value="org.postgresql.Driver"/>
      <property name="javax.persistence.jdbc.password" value="86111411"/>
      <property name="javax.persistence.schema-generation.database.action" value="create"/>
    </properties>
  </persistence-unit>
</persistence>
